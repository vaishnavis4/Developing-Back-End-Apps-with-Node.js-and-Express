// ‚úÖ Task 13: Search by Title (Async/Await version)

const axios = require("axios"); // Make sure axios is imported

// Function to search books by title
async function searchByTitle(title) {
  try {
    const url = `http://localhost:3000/api/books/title/${encodeURIComponent(title)}`;
    const response = await axios.get(url);

    console.log("üìö Books by Title:", response.data);
    return response.data;
  } catch (error) {
    console.error("‚ùå Error fetching books:", error.message);
    throw error;
  }
}

// Usage example
(async () => {
  try {
    await searchByTitle("sample");
    console.log("‚úÖ Search completed successfully.");
  } catch (err) {
    console.error("‚ö†Ô∏è Operation failed:", err.message);
  }
})();





